#!/bin/sh
#
# Create a animation of a waving flag (using -wave with an offset)
#
command='convert -delay 20 koala.gif'
command="$command -background '#99cc33' -bordercolor '#99cc33' -border 5x2"

for i in `seq 200 -4 0;`; do
  command="$command \\( -clone 0 -splice ${i}x0+0+0 "
  command="$command -wave 5x200 -chop ${i}x0+0+0 \\)"
done

# remove page offsets and delet the original image
command="$command +repage -delete 0 -loop 0 animate_flag.gif"

eval $command

chmod 644 animate_flag.gif
